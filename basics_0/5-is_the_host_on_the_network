#!/usr/bin/env bash
# This script sends 5 ICMP echo requests to a specified IP address provided as an argument

# Verify that an IP address argument is provided
if [ $# -eq 0 ]; then
    echo "Usage: 5-is_the_host_on_the_network {IP_ADDRESS}"
    exit 1
fi

# Send 5 ICMP echo requests to the specified IP address
ping -c 5 "$1"